{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "models/**/*.ts",
    "controllers/**/*.ts",
    "utils/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
